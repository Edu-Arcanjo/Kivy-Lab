CanvasExample2:


<CanvasExample2@Widget>:
    canvas:
        Line:
            points: ((0, self.center_y), (self.width, self.center_y))
            width: 3
        Line:
            points: ((self.center_x, 0), (self.center_x, self.height))
            width: 3
<CanvasExample1>:
    canvas:
        Rectangle:
            pos: (self.center_x - s/2, self.center_y - s/2)
            size: (s, s)
        Ellipse:
            pos: (dp(200), dp(500))
            size: (s, s/2)
        Line:
            points: ((0, 0), (self.width*1/4, 100), (self.width*1/2, 0), (self.width*3/4, 100), (self.width, 0))
            width: 3
        

<ImagesExample@GridLayout>:
    cols: 3
    Image:
        source: 'images/cake.jpg'
    Image:
        source: 'images/cake.jpg'
        allow_stretch: True
    Image:
        source: 'images/cake.jpg'
        allow_stretch: True
        keep_ratio: False


<WidgetsExample@GridLayout>:
    cols: 3
    ToggleButton:
        text: 'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: .2, 1
    Button:
        text: 'Click here'
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: 40
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        size_hint: .2, 1
        active: False
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        orientation: 'vertical'
        disabled: not my_switch.active
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            min: 0
            max: 400
            value: my_slider.value * 2
    TextInput:
        id: my_text_input
        size_hint: .2, 1
        text: 'foo'
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: f'Your name is: {root.text_input_str}'

